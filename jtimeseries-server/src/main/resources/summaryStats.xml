<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


    <bean id="summaryStatsCalculator" class="com.od.jtimeseries.server.summarystats.SummaryStatisticsCalculator">
        <constructor-arg ref="rootContext"/>
        <constructor-arg>
            <!-- recalculate the stats for all the timeseries over this period -->
            <bean class="com.od.jtimeseries.util.time.Time" factory-method="seconds">
                <constructor-arg value="15"/>
            </bean>
        </constructor-arg>
        <constructor-arg>
            <!-- list of SummaryStatistics to calculate for each series -->
            <!-- by default, the median, median today, 90th percentile, 90th percentile today -->
            <list>
                <bean class="com.od.jtimeseries.server.summarystats.SummaryStatistics" factory-method="MEDIAN"/>
                <bean class="com.od.jtimeseries.server.summarystats.SummaryStatistics" factory-method="PERCENTILE">
                    <constructor-arg value="90"/>
                </bean>
                <bean class="com.od.jtimeseries.server.summarystats.SummaryStatistics" factory-method="MEDIAN_TODAY"/>
                <bean class="com.od.jtimeseries.server.summarystats.SummaryStatistics" factory-method="PERCENTILE_TODAY">
                    <constructor-arg value="90"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>

</beans>
