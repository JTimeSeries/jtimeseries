<!-- No jfreechart, log4j, spring or jmxtools-->
<assembly>
  <id>nojfree</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <unpackOptions>
	      <excludes>
              <exclude>Thumbs.db</exclude>
              <exclude>org/aopalliance</exclude>
              <exclude>org/apache</exclude>
              <exclude>org/springframework</exclude>
              <exclude>org/xmlpull</exclude>
	      </excludes>
      </unpackOptions>
      <scope>runtime</scope>
      <excludes>
          <exclude>jfree:jfreechart</exclude>
          <exclude>jfree:jcommon</exclude>
          <exclude>log4j:log4j</exclude>
          <exclude>org.springframework:spring-context</exclude>
          <exclude>com.sun.jdmk:jmxtools</exclude>
          <exclude>xpp3:xpp3</exclude>
      </excludes>
      <useTransitiveFiltering>true</useTransitiveFiltering>
    </dependencySet>
  </dependencySets>
</assembly>